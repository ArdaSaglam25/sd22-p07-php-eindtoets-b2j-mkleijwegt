{% extends 'base.html.twig' %}

{% block title %}New Student{% endblock %}

{% block body %}
    <h1>Studenten Overzicht</h1>

    <div class="container-md">
        <div class="row row-gap-3">
            <div class="col-md-12"><a href="{{ path('app_admin_student_new') }}" class="btn btn-secondary">Nieuw student</a></div>
            <div class="col-md-12">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th>Naam</th>
                        <th>Leeftijd</th>
                        <th>Vakken</th>
                        <th>Acties</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for student in students %}
                        <tr>
                            <td>{{ student.getName() }}</td>
                            <td>{{ student.getAge() }}</td>
                            <td>
                                {% for course in student.getCourses() %}
                                    {{ course.getName() }},
                                {% endfor %}
                            </td>
                            <td>
                                <a class="btn btn-danger btn-sm" href="{{ path('app_admin_student_delete', {'id': student.getId()}) }}">Verwijder Student</a>
                                <a class="btn btn-info btn-sm" href="{{ path('app_admin_student_edit', {'id': student.getId()}) }}">Pas Student Aan</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock %}
